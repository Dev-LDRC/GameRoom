{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 3
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"useNamingConvention": "off",
				"noMagicNumbers": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noConsole": "off",
				"noExplicitAny": "off",
				"noEvolvingTypes": "off"
			},
			"nursery": {
				"noShadow": "off"
			},
         "complexity": {
            "noUselessFragments": "off"
         },
			"a11y": {
				"useButtonType": "off"
			}
		}
	}
}
