{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 3
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedFunctionParameters": "off"
			},
			"suspicious": {
				"noImplicitAnyLet": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"useImportType": "off",
				"useNamingConvention": "off",
				"noMagicNumbers": "off",
				"noParameterProperties": "off"
			}
		}
	}
}
